{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "types": ["node"],
        "outDir": "dist",
        "declaration": true
    },
    "include": [
        "vite.config.ts",
        "src/components/**/*.ts",
        "src/components/**/*.d.ts",
        "src/components/**/*.vue"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
